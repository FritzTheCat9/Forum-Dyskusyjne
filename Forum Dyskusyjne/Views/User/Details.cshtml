@model Forum_Dyskusyjne.Models.User

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Forum</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AvatarPath)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AvatarPath)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MessagePaging)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MessagePaging)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MessageNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MessageNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rank)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rank.Name)
        </dd>
    </dl>
</div>

<h4>Moderating: </h4>
<ul>
    @foreach (var item in Model.Forums)
    {
        <li>
            @item.Forum.Name
        </li>
    }
</ul>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Rank" class="control-label"></label>
                <select asp-for="RankId" class="form-control" asp-items="ViewBag.RankId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Change rank" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
