@model Forum_Dyskusyjne.Models.User

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Forum</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AvatarPath)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AvatarPath)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MessagePaging)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MessagePaging)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MessageNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MessageNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rank)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rank.Name)
        </dd>
    </dl>
</div>

<h4>Moderating: </h4>
<ul>
    @foreach (var item in Model.Forums)
    {
        <li>
            @item.Forum.Name
        </li>
    }
</ul>
        

<div>
    <a asp-action="Index">Back to List</a>
</div>
